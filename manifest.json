{
  "manifest_version": 3,
  "name": "Renomeador de Abas",
  "version": "1.0",
  "description": "Renomeia abas do Chrome com o nome escolhido pelo usu√°rio.",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
